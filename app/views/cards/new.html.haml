  .mypage__main
    = form_with url: "/cards/create", method: :post, html: { name: "inputForm" } do |f|
      .card-header
        クレジットカード情報入力
      .card-main
        .smallbox
          必須
        .card-main__numberbox
          %p カード番号 
          = text_field_tag "card_number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
          .cardimages
            = image_tag 'cards.jpg',size: '300x60'
          %br/  
          %br
        .smallbox
          必須
        .card-main__deadline
          %p 有効期限
          .card-main__deadline__box
            %select#exp_month{name: "exp_month", type: "text",class: 'card-main__deadline__box1'}
              %option{value: ""} --
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
            %span 月/
            %select#exp_year{name: "exp_year", type: "text",class: 'card-main__deadline__box2'}
              %option{value: ""} --
              %option{value: "2019"}19
              %option{value: "2020"}20
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}26
              %option{value: "2027"}27
              %option{value: "2028"}28
              %option{value: "2029"}29
            %span 年
          %br
        .smallbox__security 
          必須
        .card-main__security 
          %p セキュリティコード
          .card-main__security__box
            = text_field_tag "cvc", "", class: "card-main__security__box", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
            .card-main__security__box__add
              #card_token
              = f.submit '追加する', class: 'card-main__security__box__add', id: 'token_submit'