.header
  .header__box
    .header__box-main
      %h1.icon
        = link_to "/" do
          = image_tag 'logo.png', height:'40px', width:'140px'
      .header__box-main__searchBox
        = form_with(url: search_items_path, local: true, method: :get, class: "form") do |form|
          = form.text_field :keyword, placeholder: "キーワードから探す", class: "searchBox--input"
          = form.submit "", class: "button"
    .header__box-bottom
      %ul.listsleft
        %li.listsleft__item--first
          = link_to "#", class: "myboxbar__list" do
            カテゴリー
        %li.listsleft__item
          = link_to "/" do
            ブランド
      - if user_signed_in?
        %ul.listsright
          %li.listsright__item__login
            =link_to destroy_user_session_path, method: :delete do
              ログアウト
          %li.listsright__item__new
            = link_to "/users/#{current_user.id}" do
              マイページ
      - else
        %ul.listsright
          %li.listsright__item__login
            = link_to "/users/sign_in" do
              ログイン
          %li.listsright__item__new
            = link_to "/users/sign_up" do
              新規会員登録


