    %h2 本人確認
    = form_for @profile , url: user_registration_path, method: :post do |f|
      .sign_p_form
        .field
          .field_topname
            = f.label :お名前（全角）
            %span 必須
            %br/
          .field_name
            = f.text_field :family_name, autofocus: true, autocomplete: "family_name", placeholder: "例）山田"
            = f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "例）太郎"
          - if @profile.errors.any?
            - @profile.errors.full_messages_for(:family_name).each do |message|
              .error= message
          - if @profile.errors.any?
            - @profile.errors.full_messages_for(:first_name).each do |message|
              .error= message
        .field
