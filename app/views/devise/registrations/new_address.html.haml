.sign
  .sign_p
    %h2 商品送付先住所の登録
    = form_for @address, url: profiles_path,  method: :get do |f|
      .sign_p_form
        .field
          .field_topname
            = f.label :商品送付先のお名前（全角）
            %span 必須
            %bar
          .field_name
            = f.text_field :family_name, autofocus: true, autocomplete: "family_name", placeholder: "例）山田"
            = f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "例）太郎"
          - if @address.errors.any?
            - @address.errors.full_messages_for(:family_name).each do |message|
              .error= message
          - if @address.errors.any?
            - @address.errors.full_messages_for(:first_name).each do |message|
              .error= message
        .field
          .field_topname
            = f.label :商品送付先のお名前カナ（全角）
            %span 必須
            %br/
          .field_name
            = f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana", placeholder: "例）ヤマダ"
            = f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "例）タロウ"
          - if @address.errors.any?
            - @address.errors.full_messages_for(:family_name_kana).each do |message|
              .error= message
          - if @address.errors.any?
            - @address.errors.full_messages_for(:first_name_kana).each do |message|
              .error= message
        .field
          = f.label :郵便番号
          %span 必須
          %br/
          = f.text_field :zip_cord, autofocus: true, autocomplete: "zip_cord", placeholder: " 例）1234567（ハイフン無し）"
          - if @address.errors.any?
            - @address.errors.full_messages_for(:zip_cord).each do |message|
              .error= message
        .field
          = f.label :都道府県
          %span 必須
          %br/
          = f.text_field :city, autofocus: true, autocomplete: "city", placeholder: " 例）愛知県"
          - if @address.errors.any?
            - @address.errors.full_messages_for(:city).each do |message|
              .error= message
        .field
          = f.label :市区町村
          %span 必須
          %br/
          = f.text_field :address, autofocus: true, autocomplete: "address", placeholder: " 例）名古屋市中村区栄3-3"
          - if @address.errors.any?
            - @address.errors.full_messages_for(:address).each do |message|
              .error= message
        .field
          = f.label :マンション名、ビル名、部屋番号
          %br/
          = f.text_field :building, autofocus: true, autocomplete: "building"
          - if @address.errors.any?
            - @address.errors.full_messages_for(:building).each do |message|
              .error= message
        .field
          = f.label :お届け先の電話番号
          %br/
          = f.text_field :tel_number, autofocus: true, autocomplete: "tel_number",placeholder: " 例）09012345678（ハイフン無し）"
          - if @address.errors.any?
            - @address.errors.full_messages_for(:tel_number).each do |message|
              .error= message
        .actions
          = f.submit "次へ進む"