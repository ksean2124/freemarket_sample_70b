.sign
  .sign_p
    %h2 会員情報入力
    = form_for(resource, as: resource_name, url: addresses_path, method: :get) do |f|
      -# = render "devise/shared/error_messages", resource: resource
      .sign_p_form
        .field
          = f.label :ニックネーム
          %span 必須
          %br/
          = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "例）フリマ太郎"
          - if resource.errors.any?
            - resource.errors.full_messages_for(:nickname).each do |message|
              .error= message
        .field
          = f.label :メールアドレス 
          %span 必須
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
          - if resource.errors.any?
            - resource.errors.full_messages_for(:email).each do |message|
              .error= message
        .field
          = f.label :パスワード
          %span 必須
          %br/
          = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上の半角英数字"
          - if resource.errors.any?
            - resource.errors.full_messages_for(:password).each do |message|
              .error= message
        .field
          = f.label :パスワード（確認）
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password"
          - if resource.errors.any?
            - resource.errors.full_messages_for(:password_confirmation).each do |message|
              .error= message
        .text
        .actions
          = f.submit "次へ進む"
      -# = render "devise/shared/links"
